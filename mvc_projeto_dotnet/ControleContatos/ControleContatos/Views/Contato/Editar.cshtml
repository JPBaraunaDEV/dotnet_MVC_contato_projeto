@model ContatoModel

@{
    ViewData["Title"] = "Editar contato";
}

<div class="text-center">
    <h1 class="display-4">Editar contato: </h1>

    <br />
</div>

<form asp-controller="Contato" asp-action="Alterar" method="post">

    <input type="hidden" asp-for="Id"/>

    <div class="form-group">
        <label for="InputNome" class="form-label">Nome</label>
        <input type="text" asp-for="Nome" class="form-control" placeholder="Insira o nome, ex.: Fulano da Silva" />
        @Html.ValidationMessageFor(x => x.Nome)
    </div>

    <div class="form-group">
        <label for="InputEmail" class="form-label">E-Mail</label>
        <input type="text" asp-for="Email" class="form-control" placeholder="Insira o e-mail, ex.: fulano@mail.com" />
        @Html.ValidationMessageFor(x => x.Email)
    </div>

    <div class="form-group">
        <label for="InputTelefone" class="form-label">Telefone</label>
        <input type="tel" asp-for="Telefone" class="form-control" placeholder="Insira o telefone, ex.: +DDD 9 9888-1122" />
        @Html.ValidationMessageFor(x => x.Telefone)
    </div>

    <br />

    <button type="submit" class="btn btn-outline-warning btn-block">Alterar</button>
    <a class="btn btn-outline-secondary btn-block" asp-controller="Contato" asp-action="Index" role="button">Voltar</a>

</form>