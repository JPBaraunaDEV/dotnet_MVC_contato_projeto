@model ContatoModel

@{
    ViewData["Title"] = "Confirmação para apagar contato";
}

<div class="text-center">
    <h3> Realmente deseja apagar contato (@Model.Nome) ?</h3>
</div>

<a class="btn btn-outline-secondary btn-block" role="button" asp-controller="Contato" asp-action="Index">Cancelar operação</a>
<a class="btn btn-outline-danger btn-block" role="button" asp-controller="Contato" asp-action="Apagar" asp-route-id="@Model.Id">Confirmar operação</a>